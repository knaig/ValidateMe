{
  "name": "validate-me",
  "version": "1.0.0",
  "description": "AI-powered product validation framework with persona-based testing and visual regression analysis",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "validate-me": "./bin/validate-me.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "install": "npx playwright install",
    "verify": "node scripts/verify-setup.mjs",
    "run": "node src/runner.mjs --persona=default",
    "run:all": "node scripts/scenario-generator.mjs --all",
    "visual-regression": "node scripts/visual-regression-runner.mjs",
    "visual-regression:cleanup": "node scripts/visual-regression-runner.mjs --cleanup",
    "visual-regression:baseline": "node scripts/visual-regression-runner.mjs --baseline",
    "test": "node src/test-runner.mjs",
    "dev": "node --watch src/index.js"
  },
  "keywords": [
    "ai",
    "testing",
    "validation",
    "playwright",
    "automation",
    "product",
    "ux",
    "persona",
    "visual-regression"
  ],
  "author": "knaig",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0",
    "openai": "^4.20.0",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/knaig/ValidateMe.git"
  },
  "bugs": {
    "url": "https://github.com/knaig/ValidateMe/issues"
  },
  "homepage": "https://github.com/knaig/ValidateMe#readme"
}
